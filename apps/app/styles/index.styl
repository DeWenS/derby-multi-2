/*@import "bootstrap.min.css"*/
@import "normalize.css"

body
  /*font 14px sans-serif*/
  line-height 1.5

header
  a
    color #2bbbad
    font-size 36px
    text-decoration none

.container
  margin 0 auto
  width 970px

.card
  padding 5px
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  margin 0.5rem 0 1rem 0
  border-radius 2px
  
h1,h2
  color #ee6e73
  
.btn
  display inline-block
  vertical-align middle
  padding 6px 12px
  text-decoration none
  /*width 160px*/
  /*height 40px*/
  /*background none*/
  border none
  border-radius 2px
  background-color #2bbbad
  color #FFF
  margin 10px
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

.btn-danger
  background-color #f44336

input
  margin 5px
  padding 5px
  /*border-radius 2px*/
  /*border-color #D5DDF6*/

table
  width 100%
  display table

thead
  border-bottom: 1px solid #d0d0d0

td,th
  display table-cell
  vertical-align middle
  padding 5px 15px
  text-align left