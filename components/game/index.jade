index:
    h2 Game

list:
    h2 Games list
    table.table
        thead
            tr
                th id
                th name
                th op
        tbody
            each games as #game
                tr
                    td {{#game.id}}
                    td {{#game.name}}
                    td Join
add:
    h2 Add game
    form(on-submit='addGame()')
        .form-group
            label Type name of the game
            input(type='text', value='{{game_name}}').form-control
        button(type='submit').btn.btn-primary Create new game